@model UKRTB_journal.Models.Student
@{
    ViewBag.Title = "Редактирование пользователя";
}
<form asp-action="Edit" asp-controller="Student" asp-route-id="@Model.Id" method="post">
    <div class="form-group">
        <label asp-for="Surname" class="control-label">Фамилия</label>
        <input type="text" value="@ViewBag.Surname" asp-for="Surname" class="form-control" /><br />
        <span asp-validation-for="Surname"></span>
    </div>
    <div class="form-group">
        <label asp-for="Name" class="control-label">Имя</label>
        <input type="text" value="@ViewBag.Name" asp-for="Name" class="form-control" /><br />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="GroupId" class="control-label">Имя</label>
        <select asp-for="GroupId" asp-items="@ViewBag.Groups"></select>
    </div>
    <div class="form-group">
        <label asp-for="Email" class="control-label">Email</label>
        <input type="text" value="@ViewBag.Email" asp-for="Email" class="form-control" /><br />
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-primary" />
    </div>
</form>
@section scripts
{
    <script src="~/lib/jquery-validation/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}