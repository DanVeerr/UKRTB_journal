@model UKRTB_journal.Models.FileWithInfo
@{
    ViewBag.Title = "Редактирование отчета";
}
<form asp-action="Edit" asp-controller="Files" asp-route-id="@Model.FileDescription.Id">
    <div class="form-group">
        <label asp-for="FileDescription.StudentId" class="control-label">Курс</label><br />
        <select asp-for="FileDescription.StudentId" asp-items="@ViewBag.Students" class="form-control">
        </select>
    </div>
    <div class="form-group">
        <label asp-for="FileDescription.GroupId" class="control-label">Курс</label><br />
        <select asp-for="FileDescription.GroupId" asp-items="@ViewBag.Groups" class="form-control"></select>
    </div>
    <div class="form-group">
        <label asp-for="FileDescription.Type" class="control-label">Дата</label><br />
        <select asp-for="FileDescription.Type" asp-items="Html.GetEnumSelectList<TypeOfFile>()" class="form-control"></select>
        <span asp-validation-for="FileDescription.Type"></span>
    </div>
    <div class="form-group">
        <label asp-for="FileDescription.FileNumberForType" class="control-label">Дата</label>
        <input type="number" asp-for="FileDescription.FileNumberForType" class="form-control" /><br />
        <span asp-validation-for="FileDescription.FileNumberForType"></span>
    </div>
   <div class="form-group">
        <label asp-for="FileDescription.Description" class="control-label">Дата</label>
        <textarea asp-for="FileDescription.Description" class="form-control" /><br />
        <span asp-validation-for="FileDescription.Description"></span>
    </div>
    <div class="form-group">
        <label asp-for="File" class="control-label">Дата</label>
        <input type="file" asp-for="File" class="form-control" /><br />
        <span asp-validation-for="File"></span>
    </div>
</form>
@section scripts
{
    <script src="~/lib/jquery-validation/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}