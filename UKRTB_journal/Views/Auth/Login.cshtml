@model UKRTB_journal.Models.LoginDto
@{
    ViewData["Title"] = "Авторизация";
}

<form method="post" action="/Auth/Login">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <label asp-for="Login" class="control-label" >Email</label>
        <input type="text" class="form-control" name="login" />
        @if (ViewBag.ErrorMessageType is not null)
        {
            <span asp-validation-for="@Model.Login"></span>
        }
    </div>
    <div class="form-group">
        <label asp-for="Password" class="control-label">Пароль</label>
        <input type="text" class="form-control" type="password" name="password"/>
        @if (ViewBag.ErrorMessageType is not null)
        {
            <span asp-validation-for="@Model.Password"></span>
        }
        @if (ViewBag.ErrorMessage is not null)
        {
            <p align="center" style="color: red;">@ViewBag.ErrorMessage</p>
        }
    </div>
    <div class="form-group">
        <input class="btn btn-primary" type="submit" value="Войти"/>
    </div>
</form>
