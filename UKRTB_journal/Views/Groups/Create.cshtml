@model UKRTB_journal.Models.Group
@{
    ViewBag.Title = "Добавление группы";
}
<form asp-action="Create" asp-controller="Groups">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <label asp-for="Name" class="control-label">Название группы</label>
        <input type="text" asp-for="Name" class="form-control" /><br />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Speciality" class="control-label">Специальность</label>
        <input type="text" asp-for="Speciality" class="form-control" /><br />
        <span asp-validation-for="Speciality"></span>
    </div>
    <div class="form-group">
        <label asp-for="Year" class="control-label">Курс</label><br />
        <input type="number" asp-for="Year" class="form-control" />
    </div>
    <div class="form-group">
        <input class="btn btn-primary" type="submit" value="Добавить" />
    </div>
</form>

@section scripts
{
    <script src="~/lib/jquery-validation/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}