@model UKRTB_journal.Models.Group
@{
    ViewBag.Title = "Редактирование пользователя";
}
<form asp-action="Edit" asp-controller="Groups" asp-route-id="@Model.Id" method="post">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Фамилия</label>
        <input type="text" value="@Model.Name" asp-for="Name" class="form-control" /><br />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Speciality" class="control-label">Имя</label>
        <input type="text" value="@Model.Speciality" asp-for="Speciality" class="form-control" /><br />
        <span asp-validation-for="Speciality"></span>
    </div>
    <div class="form-group">
        <label asp-for="Year" class="control-label">Отчество</label><br />
        <input type="text" value="@Model.Year" asp-for="Year" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-primary" />
    </div>
</form>
@section scripts
{
    <script src="~/lib/jquery-validation/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}