@model IEnumerable<UKRTB_journal.Models.Group>
@{
    ViewBag.Title = "Все пользователи";
}

<table class="table">
    <thead class="thead-dark">
        <tr>
            <td scope="col" align="center">Имя группы:</td>
            <td scope="col" align="center">Специальность:</td>
            <td scope="col" align="center">Курс:</td>
            <td scope="col" align="center">Действия:</td>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td align="center">@item.Name</td>
            <td align="center">@item.Speciality</td>
            <td align="center">@item.Year</td>
            <td align="center">
                <a asp-action="" asp-controller="Students" asp-route-groupId="@item.Id">Студенты</a> |
                <a asp-action="Edit" asp-controller="Groups" asp-route-groupId="@item.Id">Изменить</a> |
                <a asp-action="Delete" asp-controller="Groups" asp-route-groupId="@item.Id">Удалить</a>
            </td>
        </tr>
    }
</table>
<a asp-action="Create">Добавить группу</a>