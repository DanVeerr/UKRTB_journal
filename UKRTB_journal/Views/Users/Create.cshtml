@model UKRTB_journal.Models.User
@{
    ViewBag.Title = "Регистрация";
}
<form class="form-inline">
    <label>Выберите группу&nbsp;</label>
    <select name="groupId" class="form-select">
        @foreach (UKRTB_journal.ViewModels.GroupModel group in @ViewBag.Groups)
        {
            <option value="@group.Id">@group.Name</option>
        }
    </select>
    &nbsp;<input type="submit" class="btn btn-primary" value="Выбрать" /> <br />
</form>
<form asp-action="Create" asp-controller="Users">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <label asp-for="StudentId" class="control-label">Студент</label><br />
        <select asp-for="StudentId" asp-items="@ViewBag.Students" class="form-control">
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Email" class="control-label">Email</label>
        <input type="text" asp-for="Email" class="form-control" name="email" /><br />
        <span asp-validation-for="Email"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password" class="control-label">Пароль</label>
        <input type="text" asp-for="Password" class="form-control" type="password" name="password" /><br />
        <span asp-validation-for="Password"></span>
    </div>
    <div class="form-group">
        <label asp-for="IsAdmin" class="control-label">Админ</label>
        &nbsp;<input type="checkbox" asp-for="IsAdmin" value="false" /><br />
        <span asp-validation-for="IsAdmin"></span>
    </div>
    <div class="form-group">
        <input class="btn btn-primary" type="submit" value="Добавить" />
    </div>
</form>

@section scripts
{
    <script src="~/lib/jquery-validation/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}